<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Cuentas por Pagar: <%= @vendor.name %></h1>
    <div class="flex space-x-2">
      <%= link_to "Volver a Proveedores", vendors_index_admin_account_payables_path, class: "btn btn-secondary" %>
      <%= link_to "Registrar Pago", new_admin_purchase_payment_path(vendor_id: @vendor.id), class: "btn btn-primary" %>
    </div>
  </div>

  <% if @has_transactions %>
    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
      <div class="p-4 bg-gray-100 rounded-lg shadow-sm dark:bg-slate-700">
        <h3 class="text-lg font-bold dark:text-gray-200">Total Compras</h3>
        <p class="text-2xl font-bold dark:text-gray-100">
          S/ <%= number_with_precision(@total_purchases, precision: 2) %>
        </p>
      </div>
      
      <div class="p-4 bg-gray-100 rounded-lg shadow-sm dark:bg-slate-700">
        <h3 class="text-lg font-bold dark:text-gray-200">Total Compras a Crédito</h3>
        <p class="text-2xl font-bold dark:text-gray-100">
          S/ <%= number_with_precision(@total_credit_purchases, precision: 2) %>
        </p>
      </div>
      
      <div class="p-4 bg-gray-100 rounded-lg shadow-sm dark:bg-slate-700">
        <h3 class="text-lg font-bold dark:text-gray-200">Total Pagado a Cuenta en el Período</h3>
        <p class="text-2xl font-bold dark:text-gray-100">
          S/ <%= number_with_precision(@total_paid, precision: 2) %>
        </p>
      </div>

      <div class="p-4 bg-gray-100 rounded-lg shadow-sm dark:bg-slate-700">
        <h3 class="text-lg font-bold dark:text-gray-200">
          <%= "Saldo Anterior" %>
        </h3>
        <p class="text-2xl font-bold dark:text-gray-100">
          S/ <%= number_with_precision(@total_pending_previous_period, precision: 2) %>
        </p>
      </div>
      
      <div class="p-4 bg-gray-100 rounded-lg shadow-sm dark:bg-slate-700">
        <h3 class="text-lg font-bold dark:text-gray-200">
          <%= "Total Saldo Actual #{@total_pending < 0 ? 'A Favor' : 'Pendiente'}" %>
        </h3>
        <p class="text-2xl font-bold dark:text-gray-100">
          S/ <%= number_with_precision(@total_pending&.abs, precision: 2) %>
        </p>
      </div>
      
      <div class="p-4 bg-gray-100 rounded-lg shadow-sm dark:bg-slate-700">
        <h3 class="mb-2 text-lg font-bold">Ver Calendario de Vencimientos</h3>
        <%= link_to "Calendario de Vencimientos", 
            payments_calendar_admin_account_payables_path, 
            class: "btn btn-secondary w-full md:w-auto" %>
      </div>
    </div>
  <% end %>

  <div class="px-4 mb-16">
    <div class="container p-2 mx-auto mt-6 bg-white rounded-lg border shadow border-slate-300/80 shadow-slate-100 dark:shadow-slate-950 dark:bg-slate-800 dark:border-slate-600/80">
      <table class="min-w-full bg-white dark:bg-slate-800">
        <h3 class="mb-2 text-lg font-bold">Pagos No Aplicados</h3>
        <thead>
          <tr>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Fecha</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Código</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Método</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Monto</th>
            <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if @unapplied_payments.any? %>
            <% @unapplied_payments.each do |payment| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap"><%= payment.payment_date.strftime("%d/%m/%Y") %></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= payment.custom_id %></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= payment.payment_method&.name %></td>
                <td class="px-6 py-4 whitespace-nowrap">S/ <%= number_with_precision(payment.amount, precision: 2) %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to "Ver Detalle", admin_purchase_payment_path(payment), class: "text-indigo-600 hover:text-indigo-900" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="px-6 py-4 text-center text-gray-500">No hay pagos no aplicados</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Saldo Inicial Form -->
  <div class="px-4 mb-16">
    <div class="container p-4 mx-auto mt-6 bg-white rounded-lg border shadow border-slate-300/80 shadow-slate-100 dark:shadow-slate-950 dark:bg-slate-800 dark:border-slate-600/80">
      <h3 class="mb-4 text-lg font-bold">Registrar Saldo Inicial</h3>
      
      <%= form_with url: create_initial_balance_admin_account_payables_path, method: :post, data: { controller: "form", action: "submit->form#submitForm" } do |f| %>
        <%= hidden_field_tag :vendor_id, @vendor.id %>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <%= f.label :amount, "Monto", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-500 sm:text-sm">S/</span>
              </div>
              <%= f.text_field :amount, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md", placeholder: "0.00" %>
            </div>
            <p class="mt-1 text-xs text-gray-500">Positivo si la empresa debe al proveedor, negativo si el proveedor debe a la empresa</p>
          </div>
          
          <div>
            <%= f.label :due_date, "Fecha de Vencimiento", class: "block text-sm font-medium text-gray-700" %>
            <%= f.date_field :due_date, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            <p class="mt-1 text-xs text-gray-500">Solo para saldos positivos (deuda con proveedor)</p>
          </div>
        </div>
        
        <div class="flex justify-end">
          <%= f.submit "Guardar Saldo Inicial", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Purchase Invoices -->
  <div class="px-4 mb-16">
    <div class="container p-4 mx-auto mt-6 bg-white rounded-lg border shadow border-slate-300/80 shadow-slate-100 dark:shadow-slate-950 dark:bg-slate-800 dark:border-slate-600/80">
      <h3 class="mb-4 text-lg font-bold">Facturas Pendientes</h3>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Número</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Monto</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pagado</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pendiente</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vencimiento</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @purchase_invoices.any? %>
              <% @purchase_invoices.each do |invoice| %>
                <% 
                  total_paid = invoice.purchase_invoice_payments.sum(:amount_cents) / 100.0
                  pending_amount = invoice.amount - total_paid
                  is_overdue = invoice.planned_payment_date.present? && invoice.planned_payment_date < Date.today && invoice.payment_status != "paid"
                  status_class = if invoice.payment_status == "paid"
                                   "bg-green-100 text-green-800"
                                 elsif is_overdue
                                   "bg-red-100 text-red-800"
                                 elsif invoice.payment_status == "partially_paid"
                                   "bg-yellow-100 text-yellow-800"
                                 else
                                   "bg-gray-100 text-gray-800"
                                 end
                %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= invoice.purchase_invoice_date.strftime("%d/%m/%Y") %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= invoice.translated_purchase_invoice_type %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= invoice.custom_id %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">S/ <%= number_with_precision(invoice.amount, precision: 2) %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">S/ <%= number_with_precision(total_paid, precision: 2) %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">S/ <%= number_with_precision(pending_amount, precision: 2) %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= invoice.planned_payment_date&.strftime("%d/%m/%Y") || "-" %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_class %>">
                      <%= is_overdue ? "Vencido" : invoice.translated_payment_status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% if invoice.payment_status != "paid" %>
                      <%= link_to "Registrar Pago", new_admin_purchase_payment_path(purchase_invoice_id: invoice.id), class: "text-indigo-600 hover:text-indigo-900" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="9" class="px-6 py-4 text-center text-gray-500">No hay facturas pendientes</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Applied Payments -->
  <div class="px-4 mb-16">
    <div class="container p-4 mx-auto mt-6 bg-white rounded-lg border shadow border-slate-300/80 shadow-slate-100 dark:shadow-slate-950 dark:bg-slate-800 dark:border-slate-600/80">
      <h3 class="mb-4 text-lg font-bold">Pagos Aplicados</h3>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Código Pago</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Factura</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Método</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Monto</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @applied_payments.any? %>
              <% @applied_payments.each do |payment| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= payment.purchase_payment.payment_date.strftime("%d/%m/%Y") %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= payment.purchase_payment.custom_id %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= payment.purchase_invoice.custom_id %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= payment.purchase_payment.payment_method&.name %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">S/ <%= number_with_precision(payment.amount, precision: 2) %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= link_to "Ver Detalle", admin_purchase_payment_path(payment.purchase_payment), class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6" class="px-6 py-4 text-center text-gray-500">No hay pagos aplicados</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
