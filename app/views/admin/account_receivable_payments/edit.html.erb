<%= render "shared/admin/nav", { header_title: "Editar Pago de Cuenta por Cobrar" } do %>
  <%= link_to admin_account_receivable_path(@account_receivable), class: "btn btn-secondary" do %>
    <i class="mr-1 fas fa-arrow-left"></i> Volver
  <% end %>
<% end %>

<div class="container px-4 py-6 mx-auto">
  <div class="bg-white rounded-lg shadow-sm dark:bg-slate-800">
    <div class="p-6 border-b dark:border-slate-600">
      <h2 class="text-xl font-semibold text-slate-900 dark:text-slate-100">
        Editar Pago #<%= @account_receivable_payment.id %>
      </h2>
    </div>

    <div class="p-6">
      <%= form_with(model: [:admin, @account_receivable_payment], local: true) do |form| %>
        <div class="grid grid-cols-1 gap-6 mb-6 md:grid-cols-2">
          <div>
            <h3 class="mb-2 text-sm font-medium text-slate-500 dark:text-slate-400">Cliente</h3>
            <p class="text-slate-900 dark:text-slate-100"><%= @account_receivable.user.name %></p>
          </div>

          <div>
            <h3 class="mb-2 text-sm font-medium text-slate-500 dark:text-slate-400">Cuenta por Cobrar</h3>
            <p class="text-slate-900 dark:text-slate-100">#<%= @account_receivable.id %> - <%= @account_receivable.description %></p>
          </div>

          <div>
            <h3 class="mb-2 text-sm font-medium text-slate-500 dark:text-slate-400">Monto del Pago</h3>
            <p class="text-slate-900 dark:text-slate-100"><%= number_to_currency(@account_receivable_payment.amount, unit: "S/") %></p>
          </div>

          <div>
            <h3 class="mb-2 text-sm font-medium text-slate-500 dark:text-slate-400">Fecha del Pago</h3>
            <p class="text-slate-900 dark:text-slate-100"><%= l(@account_receivable_payment.payment.payment_date, format: :long) %></p>
          </div>

          <div class="md:col-span-2">
            <%= form.label :notes, "Notas", class: "block mb-2 text-sm font-medium text-slate-500 dark:text-slate-400" %>
            <%= form.text_area :notes, class: "w-full px-3 py-2 border rounded-md shadow-sm border-slate-300 focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 dark:bg-slate-700 dark:border-slate-600 dark:text-white", rows: 3 %>
          </div>
        </div>

        <div class="flex justify-end">
          <%= form.submit "Actualizar Pago", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
