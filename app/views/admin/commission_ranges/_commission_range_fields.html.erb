<!-- app/views/admin/locations/_commission_range_fields.html.erb -->
<div class="flex items-center mb-4 space-x-4 nested-fields" data-new-record="<%= form.object.new_record? %>">
  
  <!-- Year Month Period -->
  <div class="flex-1">
    <%= form.input :year_month_period, label: 'Periodo (Año_Mes_Semestre)', input_html: { class: 'form-input block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm' } %>
  </div>
  
  <!-- Min Sales -->
  <div class="flex-1">
    <%= form.input :min_sales, label: 'Ventas Desde', input_html: { step: 0.01, class: 'form-input block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm' } %>
  </div>

  <!-- Max Sales -->
  <div class="flex-1">
    <%= form.input :max_sales, label: 'Ventas Hasta', input_html: { step: 0.01, class: 'form-input block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm' } %>
  </div>

  <!-- Commission Percentage -->
  <div class="flex-1">
    <%= form.input :commission_percentage, label: 'Porcentaje de Comisión', input_html: { step: 0.01, class: 'form-input block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm' } %>
  </div>

  <!-- Remove Button -->
  <div>
    <%= link_to '✖', '#', class: 'text-red-600 hover:text-red-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500', data: { action: 'click->commission-range-form#removeAssociation' } %>
  </div>

  <%= form.hidden_field :_destroy %>
  <%= form.hidden_field :user_id, value: current_user.id %>
</div>