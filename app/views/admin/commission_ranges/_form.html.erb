<%= simple_form_for location, url: admin_location_path(location), method: :patch, html: { class: 'space-y-6', data: { controller: 'commission-range-form', commissionRangeFormLocationValue: location.id } } do |f| %>


  <!-- Location Details -->
  <div class="mb-5">
    <%= select_tag 'location_id', options_for_select(Location.active.all.collect { |l| [l.name, l.id] }, location.id), prompt: "Select a Location", class: "form-input block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm", data: { action: 'change->commission-range-form#locationChanged' } %>
  </div>

  <!-- Hidden Input to Track the Selected Location -->
  <%= hidden_field_tag 'selected_location_id', location.id, data: { commission_range_form_target: 'selectedLocation' } %>


  <!-- Commission Ranges -->
  <div data-controller="commission-range-form">
    <!-- Template for New Commission Ranges -->
    <template data-commission-range-form-target="commissionRangeTemplate">
      <%= f.simple_fields_for :commission_ranges, CommissionRange.new, child_index: 'NEW_RECORD' do |commission_form| %>
        <%= render 'commission_range_fields', form: commission_form %>
      <% end %>
    </template>

    <div id="commission-ranges">
      <%= f.simple_fields_for :commission_ranges do |commission_form| %>
        <%= render 'commission_range_fields', form: commission_form %>
      <% end %>
    </div>

    <!-- Add New Commission Range Button -->
    <div class="mt-4" data-commission-range-form-target="links">
      <%= link_to 'Add Commission Range', '#', class: 'btn btn-secondary inline-block px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500', data: { action: 'click->commission-range-form#addAssociation' } %>
    </div>
  </div>

  <!-- Submit Button -->
  <div class="flex items-center py-6 mt-10 space-x-4 border-t border-gray-200 dark:border-slate-600">
    <%= f.submit 'Save Changes', class: 'btn btn-primary inline-block px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500' %>
    <%= link_to 'Cancel', admin_locations_path, class: 'inline-block px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
<% end %>