<!-- app/views/commission_ranges/index.html.erb -->
<%= render "shared/admin/nav", { header_title: "Rangos de Comisión por Local" } do %>
<% end %>

<div class="container p-6 mx-auto mt-6 bg-white border rounded-lg shadow border-slate-300/80 shadow-slate-100 dark:shadow-slate-950 dark:bg-slate-800 dark:border-slate-600/80">
  <!-- Location Dropdown to Filter Commission Ranges -->
  <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-3" data-controller="commission-range-index">
    <div>
      <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Localización</p>
      <%= select_tag :location_id, options_from_collection_for_select(Location.all, :id, :name, selected: params[:location_id]), prompt: 'Seleccione una Localización', class: 'form-input', data: { action: 'change->commission-range-index#filterByLocation' } %>
    </div>
  </div>
</div>

<div class="px-4 mb-16">
  <%= render 'table', commission_ranges: @commission_ranges %>
</div>