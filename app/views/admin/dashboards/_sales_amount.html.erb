<div id="sales_amount"
  class="col-span-12 p-4 bg-white rounded-lg border shadow-sm md:col-span-6 lg:col-span-3 border-slate-200 dark:bg-slate-800 dark:border-none">
  <div class="flex items-start space-x-3">
    <div class="flex justify-center items-center w-10 h-10 rounded-full bg-primary-50 dark:bg-primary-600/30">
      <%= icon "currency-dollar", classes: "w-5 h-5 text-primary-600 stroke-current dark:text-primary-300" %>
    </div>
    <div class="flex-1">
      <span class="text-sm font-medium text-primary-500 dark:text-primary-400/90">Monto de ventas Hoy</span>
      <div class="flex items-center mt-1 mb-2 space-x-2">
        <h3 class="text-3xl font-bold tracking-tight"><%= format_currency(@sales_amount) %></h3>
        
      </div>
      
    </div>
  </div>
</div>