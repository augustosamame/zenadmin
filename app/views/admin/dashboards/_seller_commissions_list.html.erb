<div id="seller_commissions_list"
  class="col-span-12 p-6 bg-white border rounded-lg shadow-sm lg:col-span-6 md:cols-span-12 border-slate-200 dark:bg-slate-800 dark:border-none">
  <div class="flex items-center justify-between mb-4">
    <h4 class="text-lg font-medium">Comisiones</h4>
      <%= link_to "Ver Todas", admin_commissions_path, class: "font-medium text-sm hover:text-primary-600 text-slate-600 dark:text-slate-400 dark:hover:text-primary-300", data: { turbo: false } %>
  </div>

  <div class="space-y-4 divide-y dark:divide-slate-600">
  <% @seller_commissions_list.each do |commission| %>
      <%= link_to "#", class: "p-2 flex flex-wrap items-center group" do %>
        <div class="flex justify-between w-full md:flex-1 md:block">
          <div class="flex items-center space-x-3">
            <%= image_tag commission.user.avatar.url, alt: commission.user.name, class: "md:w-6 w-8 md:h-6 h-8 rounded-full" if commission.user.avatar.present? %>
            <p class="flex-1 font-medium hover:text-primary-600"><%= commission.user.name %></p>
          </div>
          <div class="text-left">
            <span class="text-xs text-slate-500 dark:text-slate-400"><%= commission.user.roles_names %></span>
          </div>
        </div>

        <div
          class="w-full pt-3 text-left duration-200 md:text-right md:group-hover:-translate-x-1 md:group-hover:transition md:group-hover:transform md:w-auto md:pt-0">
          <p class="font-medium text-slate-600 dark:text-slate-300"><%= format_currency(commission.amount) %></p>
          <p class="text-xs text-slate-500 dark:text-slate-400"><%= commission.order.custom_id %> - <%= friendly_date(current_user, commission.order.order_date) %></p>
        </div>
        <div
          class="hidden transition ease-in-out opacity-0 group-hover:opacity-100 group-hover:transform group-hover:translate-x-1 md:block">
          <%= icon "chevron-right", classes: "w-4 h-4 stroke-current text-slate-500 group-hover:text-primary-600 dark:group-hover:text-primary-300" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>