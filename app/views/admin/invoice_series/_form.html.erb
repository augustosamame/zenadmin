<%= simple_form_for [:admin, @invoice_series], html: { class: 'space-y-6' } do |f| %>
  <%= f.error_notification class: 'bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative' %>

  <%= f.association :invoicer, label: 'Razón Social', input_html: { class: 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } %>
  <%= f.input :comprobante_type, label: 'Tipo de Comprobante', collection: InvoiceSeries.comprobante_types.keys.map { |type| [type.titleize, type] }, input_html: { class: 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } %>
  <%= f.input :prefix, label: 'Prefijo', input_html: { class: 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' } %>
  <%= f.input :next_number, label: 'Siguiente Número', input_html: { class: 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' } %>
  <%= f.input :status, label: 'Estado', collection: InvoiceSeries.statuses.keys.map { |status| [status.titleize, status] }, input_html: { class: 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } %>
  <%= f.input :comments, label: 'Comentarios', input_html: { class: 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' } %>

  <%= f.button :submit, class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
<% end %>