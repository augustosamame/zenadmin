<%= simple_form_for([:admin, location], html: { data: { controller: "location-form", action: "submit->location-form#submitForm", "location-form-target" => "form" } }) do |form| %>
  <!-- Header Section -->
  <div class="p-6 mb-8 bg-white border border-gray-200 rounded-lg shadow-md dark:bg-slate-800 dark:border-slate-700">
    <div class="grid items-center grid-cols-1 gap-6 mb-5 sm:grid-cols-2 sm:gap-x-16 sm:gap-y-10">
      <!-- Name -->
      <div>
        <%= form.input :name, label: "Nombre", input_html: { class: "form-input" } %>
      </div>

      <!-- Address -->
      <div>
        <%= form.input :address, label: "Dirección", input_html: { class: "form-input" } %>
      </div>
    </div>

    <div class="grid items-center grid-cols-1 gap-6 sm:grid-cols-2 sm:gap-x-16 sm:gap-y-10">
      <!-- Phone -->
      <div>
        <%= form.input :phone, label: "Teléfono", input_html: { class: "form-input" } %>
      </div>

      <!-- Email -->
      <div>
        <%= form.input :email, label: "Correo", input_html: { class: "form-input" } %>
      </div>
    </div>

    <div class="grid items-center grid-cols-1 gap-6 mt-10 sm:grid-cols-2 sm:gap-x-16 sm:gap-y-10">
      <!-- Latitude -->
      <div>
        <%= form.input :latitude, label: "Latitud", input_html: { class: "form-input" } %>
      </div>

      <!-- Longitude -->
      <div>
        <%= form.input :longitude, label: "Longitud", input_html: { class: "form-input" } %>
      </div>
    </div>

    <div class="grid items-center grid-cols-1 gap-6 mt-4 sm:grid-cols-2 sm:gap-x-16 sm:gap-y-10">
      <!-- Status -->
      <div>
        <%= form.input :status, label: "Estado", collection: Location.statuses.keys, input_html: { class: "form-input" } %>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex items-center py-6 mt-10 space-x-4 border-t dark:border-slate-600">
    <%= form.button :submit, @location.new_record? ? "Crear Localización" : "Actualizar Localización", class: "btn btn-primary" %>
    <%= link_to "Cancelar", admin_locations_path, class: "font-medium text-slate-600 hover:text-primary-600 text-sm px-2 py-2 dark:text-slate-400 dark:hover:text-primary-400" %>
  </div>
<% end %>