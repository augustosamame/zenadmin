<%= simple_form_for [:admin, payment_method] do |f| %>
  <%= render 'shared/form_errors', model: payment_method %>

  <div class="grid grid-cols-1 gap-4">
    <!-- Name Field -->
    <div>
      <%= f.input :name, label: "Nombre", required: true, input_html: { class: "form-input" } %>
    </div>

    <!-- Description Field -->
    <div>
      <%= f.input :description, label: "Descripción", input_html: { class: "form-input" } %>
    </div>

    <!-- Payment Method Type Field -->
    <div>
      <%= f.input :payment_method_type, collection: PaymentMethod.translated_payment_method_types.map { |translation, k, _v| [translation.titleize, k] }, label: "Tipo de Método de Pago", prompt: "Seleccione Tipo de Método de Pago", input_html: { data: { controller: "select" }, class: "form-select" } %>
    </div>

    <!-- Status Field -->
    <div>
      <%= f.input :status, collection: PaymentMethod.translated_statuses.map { |translation, k, _v| [translation.titleize, k] }, label: "Estado", prompt: "Seleccione Estado", input_html: { data: { controller: "select" }, class: "form-select" } %>
    </div>
  </div>

  <div class="mt-4">
    <%= f.button :submit, "Guardar", class: "btn btn-primary" %>
  </div>
<% end %>