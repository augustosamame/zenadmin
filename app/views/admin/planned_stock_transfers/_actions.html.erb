<div data-controller="dropdown" class="relative">
  <button data-action="click->dropdown#toggle" data-dropdown-target="trigger" class="inline-flex items-center px-2 py-1 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
    <span>Acciones</span>
    <svg class="w-5 h-5 ml-2 -mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  </button>
  <div data-dropdown-target="menu" class="absolute right-0 z-10 hidden w-48 mt-2 origin-top-right bg-white border border-gray-200 divide-y divide-gray-100 rounded-md shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none">
    <div class="py-1">
      <% default_object_options_array.each do |option| %>
        <% case option[:event_name] %>
        <% when "show" %>
          <%= link_to admin_planned_stock_transfer_path(planned_stock_transfer), class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
            <%= render "shared/icons/#{option[:icon]}" %>
            <span class="ml-2"><%= option[:label] %></span>
          <% end %>
        <% when "edit" %>
          <%= link_to edit_admin_planned_stock_transfer_path(planned_stock_transfer), class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
            <%= render "shared/icons/#{option[:icon]}" %>
            <span class="ml-2"><%= option[:label] %></span>
          <% end %>
        <% when "delete" %>
          <%= link_to admin_planned_stock_transfer_path(planned_stock_transfer), data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro que deseas eliminar esta transferencia planificada?" }, class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
            <%= render "shared/icons/#{option[:icon]}" %>
            <span class="ml-2"><%= option[:label] %></span>
          <% end %>
        <% when "create_stock_transfer" %>
          <% if !planned_stock_transfer.fulfilled? %>
            <%= link_to create_stock_transfer_admin_planned_stock_transfer_path(planned_stock_transfer), data: { turbo_method: :post, turbo_confirm: "¿Estás seguro que deseas crear una transferencia de stock a partir de esta transferencia planificada?" }, class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
              <%= render "shared/icons/#{option[:icon]}" %>
              <span class="ml-2"><%= option[:label] %></span>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
