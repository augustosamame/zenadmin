<div class="mt-8" data-controller="datatable" data-datatable-options-value="<%= @price_list_items_datatable_options %>">
  <h3 class="mb-4 text-lg font-medium text-gray-900">Precios de Productos</h3>
  
  <div class="container p-2 mx-auto bg-white rounded-lg border shadow border-slate-300/80 shadow-slate-100 dark:shadow-slate-950 dark:bg-slate-800 dark:border-slate-600/80">
    <table id="price-list-items-table" class="min-w-full bg-white dark:bg-slate-800">
      <thead>
        <tr>
          <th class="px-4 py-2 text-left">Producto</th>
          <th class="px-4 py-2 text-left">Precio por Defecto</th>
          <th class="px-4 py-2 text-left">Precio de Lista</th>
        </tr>
      </thead>
      <tbody>
        <% @price_list_items.each do |item| %>
          <tr>
            <td class="px-4 py-2"><%= item.product.name %></td>
            <td class="px-4 py-2">S/ <%= number_with_precision(item.product.price.to_f, precision: 2) %></td>
            <td class="px-4 py-2">
              <div class="flex items-center">
                <span class="mr-2">S/</span>
                <%= text_field_tag "price_list_items[#{item.id}][price]", 
                                  item.price.to_f, 
                                  class: "form-input w-32",
                                  step: "0.01" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
