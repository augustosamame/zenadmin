<%= render "shared/admin/nav", { header_title: "Orden de Compra" } do %>
  <div class="flex space-x-2">
    <%= link_to edit_admin_purchase_order_path(@purchase_order), class: "btn btn-secondary" do %>
      <%= render "shared/icons/edit" %> Editar
    <% end %>
    
    <% if @purchase_order.purchase.blank? && @purchase_order.status != "cancelled" %>
      <%= button_to create_purchase_admin_purchase_order_path(@purchase_order), method: :post, class: "btn btn-primary", data: { turbo_confirm: "¿Estás seguro de crear una compra a partir de esta orden?" } do %>
        <%= render "shared/icons/truck" %> Crear Compra
      <% end %>
    <% end %>
  </div>
<% end %>

<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Información de la Orden</h3>
        <div class="border rounded-md p-4">
          <div class="mb-4">
            <span class="block text-sm font-medium text-gray-700">Número de Orden:</span>
            <span class="block mt-1 text-sm text-gray-900"><%= @purchase_order.purchase_order_number %></span>
          </div>
          <div class="mb-4">
            <span class="block text-sm font-medium text-gray-700">Fecha de Orden:</span>
            <span class="block mt-1 text-sm text-gray-900"><%= friendly_date(current_user, @purchase_order.order_date) %></span>
          </div>
          <div class="mb-4">
            <span class="block text-sm font-medium text-gray-700">Estado:</span>
            <span class="block mt-1 text-sm text-gray-900"><%= @purchase_order.status.humanize %></span>
          </div>
          <% if @purchase_order.notes.present? %>
            <div>
              <span class="block text-sm font-medium text-gray-700">Notas:</span>
              <span class="block mt-1 text-sm text-gray-900"><%= @purchase_order.notes %></span>
            </div>
          <% end %>
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Información del Proveedor</h3>
        <div class="border rounded-md p-4">
          <div class="mb-4">
            <span class="block text-sm font-medium text-gray-700">Nombre:</span>
            <span class="block mt-1 text-sm text-gray-900"><%= @purchase_order.vendor.name %></span>
          </div>
          <div>
            <span class="block text-sm font-medium text-gray-700">Región:</span>
            <span class="block mt-1 text-sm text-gray-900"><%= @purchase_order.region.name %></span>
          </div>
        </div>
      </div>
    </div>
    
    <h3 class="text-lg font-medium text-gray-900 mb-4">Productos</h3>
    
    <div class="overflow-x-auto mb-6">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producto</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cantidad</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Precio Unitario</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @purchase_order.purchase_order_lines.each do |line| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= line.product.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= line.quantity %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= humanized_money_with_symbol(line.unit_price) %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= humanized_money_with_symbol(line.total_price) %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="bg-gray-50">
          <tr>
            <td colspan="3" class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 text-right">Total:</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= humanized_money_with_symbol(@purchase_order.total_amount) %></td>
          </tr>
        </tfoot>
      </table>
    </div>
    
    <% if @purchase_order.purchase.present? %>
      <div class="mt-6 border-t pt-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Compra Relacionada</h3>
        <div class="border rounded-md p-4">
          <div class="mb-4">
            <span class="block text-sm font-medium text-gray-700">Número de Compra:</span>
            <span class="block mt-1 text-sm text-gray-900"><%= @purchase_order.purchase.purchase_number %></span>
          </div>
          <div class="mb-4">
            <span class="block text-sm font-medium text-gray-700">Fecha de Compra:</span>
            <span class="block mt-1 text-sm text-gray-900"><%= friendly_date(current_user, @purchase_order.purchase.purchase_date) %></span>
          </div>
          <div>
            <%= link_to "Ver Compra", admin_purchase_path(@purchase_order.purchase), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
