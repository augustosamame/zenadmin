<%= render "shared/admin/nav", { header_title: "Compra" } do %>
  <div class="flex space-x-2">
    <%= link_to edit_admin_purchase_path(@purchase), class: "btn btn-secondary" do %>
      <%= render "shared/icons/edit" %> Editar
    <% end %>
  </div>
<% end %>

<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Información de la Compra</h3>
        <div class="border rounded-md p-4">
          <div class="mb-4">
            <span class="block text-sm font-medium text-gray-700">Número de Compra:</span>
            <span class="block mt-1 text-sm text-gray-900"><%= @purchase.purchase_number %></span>
          </div>
          <div class="mb-4">
            <span class="block text-sm font-medium text-gray-700">Fecha de Compra:</span>
            <span class="block mt-1 text-sm text-gray-900"><%= friendly_date(current_user, @purchase.purchase_date) %></span>
          </div>
          <% if @purchase.notes.present? %>
            <div>
              <span class="block text-sm font-medium text-gray-700">Notas:</span>
              <span class="block mt-1 text-sm text-gray-900"><%= @purchase.notes %></span>
            </div>
          <% end %>
        </div>
      </div>
      
      <div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Información del Proveedor</h3>
        <div class="border rounded-md p-4">
          <div class="mb-4">
            <span class="block text-sm font-medium text-gray-700">Nombre:</span>
            <span class="block mt-1 text-sm text-gray-900"><%= @purchase.vendor.name %></span>
          </div>
          <div>
            <span class="block text-sm font-medium text-gray-700">Región:</span>
            <span class="block mt-1 text-sm text-gray-900"><%= @purchase.region.name %></span>
          </div>
        </div>
      </div>
    </div>
    
    <h3 class="text-lg font-medium text-gray-900 mb-4">Productos</h3>
    
    <div class="overflow-x-auto mb-6">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producto</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cantidad</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Precio Unitario</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @purchase.purchase_lines.each do |line| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= line.product.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= line.quantity %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= humanized_money_with_symbol(line.unit_price) %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= humanized_money_with_symbol(line.total_price) %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="bg-gray-50">
          <tr>
            <td colspan="3" class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 text-right">Total:</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= humanized_money_with_symbol(@purchase.total_amount) %></td>
          </tr>
        </tfoot>
      </table>
    </div>
    
    <% if @purchase.purchase_order.present? %>
      <div class="mt-6 border-t pt-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Orden de Compra Relacionada</h3>
        <div class="border rounded-md p-4">
          <div class="mb-4">
            <span class="block text-sm font-medium text-gray-700">Número de Orden:</span>
            <span class="block mt-1 text-sm text-gray-900"><%= @purchase.purchase_order.purchase_order_number %></span>
          </div>
          <div class="mb-4">
            <span class="block text-sm font-medium text-gray-700">Fecha de Orden:</span>
            <span class="block mt-1 text-sm text-gray-900"><%= friendly_date(current_user, @purchase.purchase_order.order_date) %></span>
          </div>
          <div>
            <%= link_to "Ver Orden de Compra", admin_purchase_order_path(@purchase.purchase_order), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
