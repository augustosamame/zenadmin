<%= render "shared/admin/nav", { header_title: "Sales Report" } do %>
  <!-- Add any additional header content here -->
<% end %>

<div class="container p-4 mx-auto mt-8">
  <h1 class="mb-4 text-2xl font-bold">Generar Reporte Diario de Ventas</h1>
  <%= form_tag(admin_reports_generate_sales_path(format: :pdf), method: :post, class: "space-y-4", data: { turbo: false }) do %>
    <div>
      <%= label_tag :date, "Seleccionar Fecha:", class: "block text-sm font-medium text-gray-700" %>
      <%= date_field_tag :date, Date.today, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>
    <%= submit_tag "Generar Reporte", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 cursor-pointer" %>
  <% end %>
</div>