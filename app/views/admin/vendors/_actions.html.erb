<div class="flex space-x-2">
  <%= link_to admin_vendor_path(vendor), class: "text-blue-600 hover:text-blue-800" do %>
    <i class="fas fa-eye"></i>
  <% end %>
  
  <%= link_to edit_admin_vendor_path(vendor), class: "text-yellow-600 hover:text-yellow-800" do %>
    <i class="fas fa-edit"></i>
  <% end %>
  
  <%= link_to admin_vendor_path(vendor), 
      method: :delete, 
      data: { confirm: "Are you sure you want to delete this vendor?" }, 
      class: "text-red-600 hover:text-red-800" do %>
    <i class="fas fa-trash"></i>
  <% end %>
</div>
