<div class="flex space-x-2">
  <%= link_to admin_vendor_path(vendor), class: "text-blue-600 hover:text-blue-800" do %>
    <i class="fas fa-eye"></i>
  <% end %>
  
  <%= link_to edit_admin_vendor_path(vendor), class: "text-yellow-600 hover:text-yellow-800" do %>
    <i class="fas fa-edit"></i>
  <% end %>
  
  <%= button_to admin_vendor_path(vendor), 
      method: :delete, 
      form: { 
        data: { 
          turbo_confirm: "¿Está seguro que desea eliminar este proveedor?",
          turbo: false 
        } 
      },
      class: "text-red-600 hover:text-red-800 bg-transparent border-0 p-0 cursor-pointer" do %>
    <i class="fas fa-trash"></i>
  <% end %>
</div>
