<%= render "shared/admin/nav", { header_title: "Nuevo Proveedor" } do %>
  <%= link_to 'Volver a Proveedores', admin_vendors_path, class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
<% end %>

<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="p-6">
      <h2 class="text-xl font-semibold mb-6">Nuevo Proveedor</h2>
      
      <%= form_with(model: @vendor, url: admin_vendors_path, local: true, class: "space-y-6") do |form| %>
        <% if @vendor.errors.any? %>
          <div class="bg-red-50 p-4 rounded mb-6">
            <div class="font-medium text-red-800">
              <%= pluralize(@vendor.errors.count, "error") %> impidieron que este proveedor sea guardado:
            </div>
            <ul class="mt-3 list-disc list-inside text-sm text-red-800">
              <% @vendor.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-2">
            <%= form.label :name, "Nombre", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>

          <div class="space-y-2">
            <%= form.label :contact_name, "Nombre de Contacto", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :contact_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>

          <div class="space-y-2">
            <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
            <%= form.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>

          <div class="space-y-2">
            <%= form.label :phone, "Teléfono", class: "block text-sm font-medium text-gray-700" %>
            <%= form.telephone_field :phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>

          <div class="space-y-2">
            <%= form.label :address, "Dirección", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>

          <div class="space-y-2">
            <%= form.label :tax_id, "RUC/DNI", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :tax_id, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>

          <div class="space-y-2 md:col-span-2">
            <%= form.label :notes, "Notas", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>
        </div>

        <div class="flex justify-end">
          <%= form.submit "Guardar Proveedor", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
