<div data-pos--servicio-transporte-modal-target="container" class="hidden overflow-y-auto fixed inset-0 z-50" role="dialog">
  <div class="relative w-full h-screen">
    <div data-pos--servicio-transporte-modal-target="content" class="hidden p-8 m-4 mx-auto max-w-2xl h-auto bg-white rounded-lg shadow-xl dark:bg-slate-700">
      <h2 class="text-lg font-semibold text-center dark:text-slate-100">Servicio de Transporte</h2>
      <form>
        <div class="mt-4 mb-4">
          <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-slate-200">Descripción del Servicio</label>
          <textarea class="p-2 w-full rounded-md border dark:bg-slate-600 dark:text-white" data-pos--servicio-transporte-modal-target="descripcion" rows="2"></textarea>
        </div>
        <div class="mb-4">
          <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-slate-200">Transportista</label>
          <% if defined?(@transportistas) && @transportistas.present? %>
            <select class="p-2 w-full rounded-md border dark:bg-slate-600 dark:text-white" data-pos--servicio-transporte-modal-target="transportista">
              <option value="">Selecciona un transportista</option>
              <% @transportistas.each do |t| %>
                <option value="<%= t.id %>"><%= t.display_name %></option>
              <% end %>
            </select>
          <% else %>
            <div class="text-red-500">No hay transportistas disponibles.</div>
          <% end %>
        </div>
        <div class="flex flex-row gap-2 mb-2">
          <div class="w-3/4">
            <label class="block text-xs font-medium text-gray-700">Dirección de origen</label>
            <input data-pos--servicio-transporte-modal-target="direccionOrigen" type="text" class="p-2 w-full rounded-md border dark:bg-slate-600 dark:text-white" />
          </div>
          <div class="w-1/4">
            <label class="block text-xs font-medium text-gray-700">Ubigeo de origen</label>
            <input data-pos--servicio-transporte-modal-target="ubigeoOrigen" type="text" maxlength="6" class="p-2 w-full rounded-md border dark:bg-slate-600 dark:text-white" />
          </div>
        </div>
        <div class="flex flex-row gap-2 mb-2">
          <div class="w-3/4">
            <label class="block text-xs font-medium text-gray-700">Dirección de destino</label>
            <input data-pos--servicio-transporte-modal-target="direccionDestino" type="text" class="p-2 w-full rounded-md border dark:bg-slate-600 dark:text-white" />
          </div>
          <div class="w-1/4">
            <label class="block text-xs font-medium text-gray-700">Ubigeo de destino</label>
            <input data-pos--servicio-transporte-modal-target="ubigeoDestino" type="text" maxlength="6" class="p-2 w-full rounded-md border dark:bg-slate-600 dark:text-white" />
          </div>
        </div>
        <div class="flex flex-row gap-2 mb-2">
          <div class="w-1/2">
            <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-slate-200">Valor Referencial del Servicio</label>
            <input type="number" step="0.01" min="0" class="p-2 w-full rounded-md border dark:bg-slate-600 dark:text-white" data-pos--servicio-transporte-modal-target="valorServicio">
          </div>
          <div class="w-1/2">
            <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-slate-200">Detracción usar valor referencial</label>
            <input type="checkbox" class="mr-2"data-pos--servicio-transporte-modal-target="detraccionUseValorReferencial">
          </div>
        </div>
        <div class="flex flex-row gap-2 mb-2">
          <div class="w-1/2">
            <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-slate-200">Valor Referencial Carga Efectiva</label>
            <input type="number" step="0.01" min="0" class="p-2 w-full rounded-md border dark:bg-slate-600 dark:text-white" data-pos--servicio-transporte-modal-target="valorCargaEfectiva">
          </div>
          <div class="w-1/2">
            <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-slate-200">Valor Referencial Carga Útil</label>
            <input type="number" step="0.01" min="0" class="p-2 w-full rounded-md border dark:bg-slate-600 dark:text-white" data-pos--servicio-transporte-modal-target="valorCargaUtil">
          </div>
        </div>
        <div class="flex items-center mb-4">
          <input type="checkbox" class="mr-2" data-pos--servicio-transporte-modal-target="restarDetraccion">
          <label class="text-sm font-medium text-gray-700 dark:text-slate-200">Restar detracción de cuota</label>
        </div>
        <div class="mb-4">
          <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-slate-200">Guía de Remisión Asociada</label>
          <input type="text" class="p-2 w-full rounded-md border dark:bg-slate-600 dark:text-white" data-pos--servicio-transporte-modal-target="guiaRemision">
        </div>
        <div class="mb-4">
          <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-slate-200">Guía de Transportista Asociada</label>
          <input type="text" class="p-2 w-full rounded-md border dark:bg-slate-600 dark:text-white" data-pos--servicio-transporte-modal-target="guiaTransportista">
        </div>
        <div class="flex justify-end mt-4 space-x-4">
          <button type="button" class="btn btn-secondary" data-action="click->pos--servicio-transporte-modal#close">Cancelar</button>
          <button type="button" class="btn btn-primary" data-action="click->pos--servicio-transporte-modal#save">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>
